using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using UnityEngine.UI;
using TMPro;

public class PlayerAmount : MonoBehaviour
{
    public int health = 100;
    public int money = 1450;
    public int energy = 100;
    public int water = 100;

    public TMP_Text health_Text;
    public TMP_Text money_Text;
    public TMP_Text energy_Text;
    public TMP_Text water_Text;

    public void SaveAmount()
    {
        SaveSystem.SavePlayerData(this);
    }

    public void LoadAmount()
    {
        PlayerData data = SaveSystem.LoadPlayerData();

        health = data.health;
        money = data.money;
        energy = data.energy;
        water = data.water;

        Vector3 position;
        position.x = data.position[0];
        position.y = data.position[1];
        position.z = data.position[2];

        transform.position = position;
    }

    public void Update()
    {

        if (health_Text != null)
        {
            health_Text.text = $"{health_Text}";
        }

        if (money_Text != null)
        {
            money_Text.text = $"{money_Text}";
        }

        if (energy_Text != null)
        {
            energy_Text.text = $"{energy}";
        }

        if (water_Text != null)
        {
            water_Text.text = $"{water}";
        }
    }

    #region UI Methods

    public void Changehealth(int amount) 
    {
        health = amount;
    }

    public void Changemoney(int amount) 
    {
        money = amount;
    }

    public void Changeenergy(int amount) 
    {
        energy = amount;
    }

    public void Changewater(int amount) 
    {
        water = amount;
    }

    #endregion
}
